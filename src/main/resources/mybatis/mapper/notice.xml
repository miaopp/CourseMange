<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Notice">
    <resultMap id="noticeResultMap" type="Notice">
        <result property="noticeId" column="notice_id"/>
        <result property="applyId" column="apply_id"/>
        <result property="courseId" column="course_id"/>
        <result property="labId" column="lab_id"/>
        <result property="userId" column="user_id"/>
        <result property="targetUser" column="target_user"/>
        <result property="state" column="notice_state"/>
    </resultMap>
    <select id="selectNoticeByManager" parameterType="java.lang.Integer" resultMap="noticeResultMap">
        <![CDATA[
            select *
            from notice
            where target_user = #{targetUser} and notice_state = 1;
        ]]>
    </select>
    <select id="selectNoticeByTeacher" parameterType="java.lang.Integer" resultMap="noticeResultMap">
        <![CDATA[
            select *
            from notice
            where target_user = #{targetUser} and (notice_state = 2 or notice_state = 3);
        ]]>
    </select>
    <insert id="insertNotice" parameterType="Notice">
        <![CDATA[
            insert into notice
            (apply_id, course_id, lab_id, user_id, target_user, notice_state, message)
            values (#{applyId}, #{courseId}, #{labId}, #{userId}, #{targetUser}, #{state}, #{message});
        ]]>
    </insert>
    <update id="noticeChecked" parameterType="java.util.Map">
        <![CDATA[
            update notice
            set notice_state = #{state}
            where apply_id = #{applyId}
        ]]>
    </update>
    <select id="selectNoticeByApplyId" parameterType="java.lang.Integer" resultMap="noticeResultMap">
        <![CDATA[
            select *
            from notice
            where apply_id = #{applyId}
        ]]>
    </select>
</mapper>