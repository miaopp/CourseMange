<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
    <resultMap id="userResultMap" type="User">
        <result property="userId" column="user_id"/>
        <result property="username" column="user_name"/>
        <result property="password" column="user_password"/>
        <result property="realName" column="user_realname"/>
        <result property="classes" column="user_class"/>
        <result property="dept" column="user_dept"/>
        <result property="power" column="user_power"/>
        <result property="course" column="user_course"/>
    </resultMap>
    <select id="selectByName" parameterType="java.lang.String" resultMap="userResultMap">
        <![CDATA[
            select user_id,user_name,user_password,user_number,user_class,user_dept,user_power
            from user
            where  user_name = #{username};
        ]]>
    </select>
    <insert id="insertUser" parameterType="User">
        <![CDATA[
            insert into user
            (user_name, user_password, user_class, user_dept, user_power)
            values (#{username}, #{password}, #{classes}, #{dept}, #{power})
        ]]>
    </insert>
</mapper>